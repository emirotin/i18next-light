{
  "name": "@emirotin/i18next-light",
  "version": "1.0.0",
  "description": "i18next lightweight client-side companion",
  "main": "index.js",
  "module": "./src/index.js",
  "types": "./index.d.ts",
  "keywords": [
    "i18next",
    "internationalization",
    "i18n",
    "translation",
    "localization",
    "l10n",
    "globalization",
    "gettext"
  ],
  "homepage": "https://github.com/emirotin/i18next-light",
  "bugs": "https://github.com/emirotin/i18next-light/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/emirotin/i18next-light.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-async-generator-functions": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cpy-cli": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "karma": "^5.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.32",
    "lint-staged": "^10.2.2",
    "markdown-toc": "^1.2.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^2.5.4",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "eslint \"src/*.js\"",
    "pretest": "run-s prettify lint test:typescript test:typescript:noninterop",
    "test:node": "mocha --require test/node-support.js \"test/**/*.spec.js\"",
    "test:browser": "karma start karma.conf.js",
    "test": "run-s test:node test:browser",
    "test:typescript": "eslint -c .eslintrc.ts.js \"./**/*.ts\"",
    "test:typescript:noninterop": "eslint -c .eslintrc.ts.nonEsModuleInterop.js \"./**/*.ts\"",
    "tdd": "karma start karma.conf.js",
    "build": "rimraf dist && rollup -c && cpy \"./dist/umd/*.js\" ./",
    "preversion": "run-s test build && git push",
    "postversion": "git push && git push --tags",
    "prettify": "prettier --write \"{,**/}*.{ts,tsx,js,json,md}\""
  },
  "author": "Eugene Mirotin <emirotin@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "markdown-toc -i README.md && git add README.md && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettify",
      "yarn eslint -c .eslintrc.ts.js"
    ],
    "*.js": [
      "yarn prettify",
      "yarn lint"
    ],
    "*.{json,md}": [
      "yarn prettify"
    ]
  },
  "browserslist": [
    "defaults",
    "> 2%",
    "not dead"
  ]
}
