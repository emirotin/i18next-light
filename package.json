{
  "name": "@emirotin/i18next-light",
  "version": "1.0.0",
  "description": "i18next lightweight client-side companion",
  "main": "./dist/cjs/i18next.js",
  "module": "./src/index.js",
  "types": "./index.d.ts",
  "keywords": [
    "i18next",
    "internationalization",
    "i18n",
    "translation",
    "localization",
    "l10n",
    "globalization",
    "gettext"
  ],
  "homepage": "https://github.com/emirotin/i18next-light",
  "bugs": "https://github.com/emirotin/i18next-light/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/emirotin/i18next-light.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-async-generator-functions": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "14.0.0",
    "browserify-istanbul": "2.0.0",
    "chai": "3.5.0",
    "cpy-cli": "^2.0.0",
    "dtslint": "^0.4.2",
    "eslint": "3.15.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "2.2.0",
    "husky": "^1.3.1",
    "istanbul": "github:gotwarlost/istanbul#source-map",
    "karma": "2.0.0",
    "karma-browserify": "5.1.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "github:douglasduteil/karma-coverage#next",
    "karma-expect": "1.1.3",
    "karma-mocha": "1.3.0",
    "karma-rollup-preprocessor": "3.0.3",
    "karma-sinon": "1.0.5",
    "karma-spec-reporter": "0.0.26",
    "lint-staged": "^8.2.1",
    "mocha": "3.2.0",
    "prettier": "^1.19.1",
    "rimraf": "2.5.4",
    "rollup": "1.1.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "sinon": "1.17.7",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3",
    "watchify": "3.9.0"
  },
  "scripts": {
    "pretest": "npm run test:typescript && npm run test:typescript:noninterop",
    "test": "karma start karma.conf.js --singleRun",
    "test:typescript": "tslint --project tsconfig.json",
    "test:typescript:noninterop": "tslint --project tsconfig.nonEsModuleInterop.json",
    "tdd": "karma start karma.conf.js",
    "build": "rimraf dist && rollup -c && cpy \"./dist/umd/*.js\" ./",
    "preversion": "npm run test && npm run build && git push",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --write \"{,**/}*.{ts,tsx,js,json,md}\""
  },
  "author": "Eugene Mirotin <emirotin@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx,js,json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "./i18next-light.js",
      "./i18next-light.min.js"
    ]
  },
  "browserslist": [
    "defaults",
    "> 2%",
    "not dead"
  ]
}
